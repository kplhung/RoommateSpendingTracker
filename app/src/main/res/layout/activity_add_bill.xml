<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/label_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Label: "/>

    <EditText
        android:id="@+id/label_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter a label for your bill"
        app:layout_constraintLeft_toRightOf="@id/label_text"/>

    <TextView
        android:id="@+id/description_text"
        android:text="Enter a description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/label_input"/>

    <EditText
        android:id="@+id/description_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="Enter a description for this bill"
        app:layout_constraintTop_toBottomOf="@id/label_input"
        app:layout_constraintLeft_toRightOf="@id/description_text"/>

    <TextView
        android:id="@+id/duedate_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due date: "
        app:layout_constraintTop_toBottomOf="@id/description_input"/>

    <EditText
        android:id="@+id/duedate_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/description_input"
        app:layout_constraintLeft_toRightOf="@id/duedate_label"/>

    <TextView
        android:id="@+id/timeframe_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repeat every"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/duedate_input"/>

    <Spinner
        android:id="@+id/timeframe_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/timeframe_label"
        app:layout_constraintTop_toBottomOf="@id/duedate_input"/>

    <TextView
        android:id="@+id/split_bill_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How should this bill be split?"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/timeframe_label"/>
    <ListView
        android:id="@+id/split_bill_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:layout_constraintTop_toBottomOf="@id/split_bill_btn"/>
    <Button
        android:id="@+id/save_bill_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:onClick="saveBill"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>