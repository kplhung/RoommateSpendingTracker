<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#caf0f7"
    tools:context="com.example.kallyruan.roommateexpense.UserPkg.SignupActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/loginSticker"
        android:layout_width="102dp"
        android:layout_height="34dp"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:gravity="center"
        android:onClick="setIcon1"
        android:text="Username"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="42dp" />

    <TextView
        android:id="@+id/passwordSticker"
        android:layout_width="97dp"
        android:layout_height="41dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Password"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginSticker" />

    <EditText
        android:id="@+id/emailField"
        android:layout_width="189dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/loginSticker"
        app:layout_constraintTop_toBottomOf="parent"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="42dp" />

    <EditText
        android:id="@+id/passwordField"
        android:layout_width="189dp"
        android:layout_height="41dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/passwordSticker"
        app:layout_constraintTop_toBottomOf="@+id/emailField"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="108dp" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:text="Sign up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordField"
        app:layout_constraintVertical_bias="0.896" />

    <TextView
        android:id="@+id/nicknameSticker"
        android:layout_width="97dp"
        android:layout_height="41dp"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="20dp"
        android:text="Nickname"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordSticker"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="185dp" />

    <EditText
        android:id="@+id/nicknameField"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/nicknameSticker"
        app:layout_constraintTop_toBottomOf="@+id/passwordField"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="167dp" />

    <TextView
        android:id="@+id/notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:text="Pick A User Icon"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nicknameSticker" />

    <GridView
        android:id="@+id/user_icon_gridView"
        android:layout_width="370dp"
        android:layout_height="200dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:columnWidth="80dp"
        android:gravity="center"
        android:horizontalSpacing="8dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="8dp"
        app:layout_constraintBottom_toTopOf="@+id/signUpButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notice"
        app:layout_constraintVertical_bias="0.655" />


</android.support.constraint.ConstraintLayout>