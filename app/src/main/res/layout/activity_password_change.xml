<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#d3d3d3d3">


        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="10dp"
            android:text="Logged in as"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="32dp"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="65dp" />

    </FrameLayout>

    <TextView
        android:id="@+id/old_password_sticker"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="164dp"
        android:gravity="center"
        android:text="Old password"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/new_passwordSticker"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/old_password_sticker"
        android:layout_marginBottom="209dp"
        android:gravity="center"
        android:text="New password"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/old_password_field"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/new_password_field"
        android:layout_alignTop="@+id/old_password_sticker"
        android:inputType="text" />

    <EditText
        android:id="@+id/new_password_field"
        android:layout_width="209dp"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="202dp"
        android:layout_marginEnd="32dp"
        android:inputType="text" />

    <Button
        android:id="@+id/change_password"
        android:layout_width="383dp"
        android:layout_height="63dp"
        android:layout_above="@+id/cancel"
        android:layout_alignParentStart="true"
        android:background="@drawable/my_button_bg"
        android:text="Change password" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="385dp"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/my_button_bg"
        android:onClick="cancel"
        android:text="Cancel" />
</RelativeLayout>
