<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="#caf0f7">

    <TextView
        android:id="@+id/groupTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My existing group list"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="110dp" />


    <TextView
        android:id="@+id/ID"
        android:text="id"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupTitle"
        />

    <TextView
        android:id="@+id/groupName"
        android:text="Group name"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/groupTitle"
        app:layout_constraintStart_toEndOf="@+id/ID" />

    <TextView
    android:id="@+id/participation"
    android:textSize="15dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="15dp"
    app:layout_constraintTop_toBottomOf="@+id/groupTitle"
    android:text="participation"
    app:layout_constraintStart_toEndOf="@+id/groupName" />

    <TextView
        android:id="@+id/alert"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/groupTitle"
        android:text="Alert"
        app:layout_constraintStart_toEndOf="@+id/participation" />

    <ListView
        android:id="@+id/listView_id"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:gravity="start"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/ID" />


    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:clickable="true"
        android:onClick="backToMenu"
        android:layout_marginLeft="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/listView_id"/>

    <Button
        android:id="@+id/groupManage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Group"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toRightOf="@+id/back"
        android:clickable="true"
        android:onClick="manageGroupAction"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/listView_id"/>


</android.support.constraint.ConstraintLayout>
