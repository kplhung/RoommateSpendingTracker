<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Your Own Group!"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"/>

    <EditText
        android:id="@+id/groupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Please type group name:"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/invitee1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Type invitee email address"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintTop_toBottomOf="@+id/groupName"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/invitee2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Type invitee email address"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintTop_toBottomOf="@+id/invitee1"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/invitee3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Type invitee email address"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintTop_toBottomOf="@+id/invitee2"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Group"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        app:layout_constraintTop_toBottomOf="@+id/invitee3"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:onClick="createGroup"/>

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:onClick="backToMenu"
        android:text="Back"
        app:layout_constraintStart_toEndOf="@+id/commit"
        app:layout_constraintTop_toBottomOf="@+id/invitee3" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group create successfully!"
        tools:layout_editor_absoluteX="297dp"
        tools:layout_editor_absoluteY="115dp"
        android:visibility="invisible"
        android:textSize="28dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:textColor="#090909"/>
</android.support.constraint.ConstraintLayout>
