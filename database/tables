CREATE TABLE Users (user_id VARCHAR(255), password VARCHAR(25), PRIMARY KEY (user_id))

CREATE TABLE Groups (group_id INTEGER, group_name VARCHAR(20), PRIMARY KEY(group_id))

CREATE TABLE Bills (bill_id INTEGER, user_id VARCHAR(255), amount INTEGER, due_date CHAR(10), description VARCHAR(255), FOREIGN KEY (user_id) REFERENCES Users)

CREATE TABLE UserGroups (user_id VARCHAR(255), group_id INTEGER, FOREIGN KEY (user_id) REFERENCES Users, FOREIGN KEY (group_id) REFERENCES Groups)

CREATE TABLE GroupBills (group_id INTEGER, bill_id INTEGER, FOREIGN KEY (group_id) REFERENCES Groups, FOREIGN KEY (bill_id) REFERENCES Bills)
